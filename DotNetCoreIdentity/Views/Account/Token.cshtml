@model DotNetCoreIdentity.Models.TokenViewModel
@{
    ViewData["Title"] = "JWT Token";
}

<h1>JWT Token</h1>
<div class="mb-3">
    <label class="form-label">Token (copy and store client-side)</label>
    <textarea class="form-control" rows="6" readonly>@Model.Token</textarea>
    <small class="text-muted">Expires (UTC): @Model.ExpiresUtc.ToString("u")</small>
    <div class="mt-3">
        <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Back to Home</a>
    </div>
 </div>


